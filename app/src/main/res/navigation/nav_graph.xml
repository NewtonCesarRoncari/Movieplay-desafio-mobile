<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.nroncari.movieplay.presentation.ui.fragment.HomeFragment"
        android:label="MoviePlay"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_searchMovieFragment"
            app:destination="@id/searchMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.nroncari.movieplay.presentation.ui.fragment.MovieDetailFragment"
        android:label="MovieDetailFragment"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="movieId"
            app:argType="long" />
        <action
            android:id="@+id/action_movieDetailFragment_to_youtubePlayerActivity"
            app:destination="@id/youtubePlayerActivity" />
    </fragment>
    <fragment
        android:id="@+id/myListFragment"
        tools:layout="@layout/fragment_my_list"
        android:name="com.nroncari.movieplay.presentation.ui.fragment.MyListFragment"
        android:label="MyListFragment" />
    <activity
        android:id="@+id/youtubePlayerActivity"
        tools:layout="@layout/activity_youtube_player"
        android:name="com.nroncari.movieplay.presentation.ui.YoutubePlayerActivity"
        android:label="YoutubePlayerActivity" >
        <argument
            android:name="movieDataVideoPath"
            app:argType="string" />
    </activity>
    <fragment
        android:id="@+id/searchMovieFragment"
        tools:layout="@layout/fragment_movie_search"
        android:name="com.nroncari.movieplay.presentation.ui.fragment.SearchMovieFragment"
        android:label="SearchMovieFragment" >
        <action
            android:id="@+id/action_searchMovieFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
</navigation>