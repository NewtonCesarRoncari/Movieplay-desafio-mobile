<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/googlesans_bold"
        android:maxLines="1"
        android:text="Ficha Técnica"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/title_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_original_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/googlesans_bold"
        android:maxLines="1"
        android:text="Título Original:"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppTheme.Subtitle2"
        android:textColor="@color/description_text_color"
        app:fontFamily="@font/googlesans_bold"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_original_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/googlesans_medium"
        android:text="Batman"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppTheme.Subtitle2"
        android:textColor="@color/description_text_color"
        app:fontFamily="@font/googlesans_regular"
        app:layout_constraintBottom_toBottomOf="@+id/label_original_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_original_title"
        app:layout_constraintTop_toTopOf="@+id/label_original_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/googlesans_bold"
        android:maxLines="1"
        android:text="Ano de Produção:"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppTheme.Subtitle2"
        android:textColor="@color/description_text_color"
        app:fontFamily="@font/googlesans_bold"
        app:layout_constraintStart_toStartOf="@+id/label_original_title"
        app:layout_constraintTop_toBottomOf="@+id/label_original_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/googlesans_medium"
        android:text="1998"
        android:textAppearance="@style/TextAppearance.AppTheme.Subtitle2"
        android:textColor="@color/description_text_color"
        app:fontFamily="@font/googlesans_regular"
        app:layout_constraintBottom_toBottomOf="@+id/label_year"
        app:layout_constraintStart_toEndOf="@+id/label_year"
        app:layout_constraintTop_toTopOf="@+id/label_year" />

    <RatingBar
        android:id="@+id/fragment_movie_detail_rating_bar"
        style="?android:ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:numStars="5"
        android:rating="4.5"
        app:layout_constraintStart_toStartOf="@+id/label_year"
        app:layout_constraintTop_toBottomOf="@+id/label_year" />

    <TextView
        android:id="@+id/fragment_movie_detail_rating_numeric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/googlesans_bold"
        android:text="4.5"
        android:textAppearance="@style/TextAppearance.AppTheme.Subtitle2"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_movie_detail_rating_bar"
        app:layout_constraintStart_toEndOf="@+id/fragment_movie_detail_rating_bar"
        app:layout_constraintTop_toTopOf="@+id/fragment_movie_detail_rating_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>